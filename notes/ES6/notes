  name,
  age
}



ðŸ˜ƒ Constructor functions
-generate instances of objects

function Vehicle 

const Mammal = function() {
  Animal.call(this);
  this.hasFur = true;
  this.liveBirth = true;
}
////////////////////////

const Animal {
  constructor(sound){
    this.hasCellWall = false;
    this.sound = sound;
  }
  makeSound() {
    console.log(this.sound);
  }
}

class Mammal extends Animal{
  constructor(sound) {
    super()
    this.hasFur = true;
    this.liveBirth = true;
  }
}


const randomAnimal = new Mammal();

console.log(randomAnimal);





































